    .popup {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) scale(0);
      width: 300px;
      padding: 20px;
      background: red;
      color: white;
      text-align: center;
      font-size: 18px;
      border-radius: 10px;
      box-shadow: 0 0 10px 2px yellow;
      animation: pop 0.3s ease forwards;
    }

    @keyframes pop {
      to {
        transform: translate(-50%, -50%) scale(1);
